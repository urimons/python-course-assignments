import math
print("Hello, I'm Uri's code")
print("I understood you need to calculate a circle area and circumeference")
radius = float(input("What is the radius of the circle you want to calculate?"))
area = math.pi * radius ** 2
circumeference = 2 * math.pi * radius
print(f"The area of your circle is:{area}, and the circumeference is {circumeference}")

import math
print("Hello, I'm Uri's code")
print("I understood you need to calculate a rectangle's area and perimeter")
height = float(input("Please enter (in numbers) the height of the rectangle you want to calculate?"))
width = float(input("And now please enter (in numbers) the width of the rectangle you want to calculate?"))
area = height * width
perimeter = 2 * (width + height)
print(f"The area of your rectanle is:{area}, and the perimeter is {perimeter}")
print("Have a lovely day :)")
